extends layout
block content
 h2.page-header
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg} 
 form(method='POST' action='/insert')
    .form-group
    label First Name:
    input.form-control(type='text', placeholder='Enter first name' name='firstname')
    .form-group
    label Last Name:
    input.form-control(type='text', placeholder='Enter last name' name='lastname')
    form-group
    label Email:
    input.form-control(type='email', placeholder='Enter Email' name='email')
    input.btn.btn-primary(type='submit', name=submit, value='Insert')